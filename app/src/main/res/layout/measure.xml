<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/measure"
    android:background="@android:color/holo_red_dark">

    <TextView
        android:text="89db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/measure_button_fragment"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="93dp"
        android:id="@+id/current_db_measure_fragment"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/measure_button_fragment"
        android:layout_height="100dp"
        android:background="@color/primary"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/current_db_measure_fragment"
        android:layout_above="@+id/measure_button_fragment"
        >


        <TextView
            android:text="@string/latitude_measure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:id="@+id/latitude_title_measure" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/latitude_measure"
            android:textAlignment="center"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="@string/longitude_measure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:id="@+id/longitude_title_measure"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/longitude_measure"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/current_db_measure_fragment"
        android:layout_above="@+id/measure_button_fragment"
        android:layout_alignTop="@+id/linearLayout2"
        android:weightSum="2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/min_measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/min_title_measure"
                android:textStyle="normal|bold"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/min_measure"
                android:layout_weight="1"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/max_measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/max_title_measure"
                android:layout_marginTop="20dp"
                android:textStyle="normal|bold"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/max_measure"
                android:layout_weight="1"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/avg_measure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/avg_title_measure"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="normal|bold"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/avg_measure"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>