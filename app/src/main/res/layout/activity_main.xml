<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.gda.pg.eti.kask.soundmeterpg.MainActivity"
    android:id="@+id/relative_loyout_main_activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6a64d9"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert noise in DB"
        android:id="@+id/insertButton"
        android:layout_marginTop="62dp"
        android:nestedScrollingEnabled="false"
        android:onClick="insertData"
        android:layout_below="@+id/main_activity_toolbar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start measure"
        android:id="@+id/startButton"
        android:layout_marginTop="34dp"
        android:nestedScrollingEnabled="false"
        android:onClick="startMyService"
        android:layout_below="@+id/insertButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop measure"
        android:id="@+id/stopButton"
        android:nestedScrollingEnabled="false"
        android:onClick="stopMyService"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show location"
        android:id="@+id/locationButton"
        android:nestedScrollingEnabled="false"
        android:onClick="showGPS"
        android:layout_below="@+id/stopButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

</RelativeLayout>
