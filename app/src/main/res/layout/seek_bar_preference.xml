<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#9e9e9e">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:id="@+android:id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:textStyle="normal|bold"
        android:textSize="14sp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/min_value_seek_bar"
        android:layout_below="@+android:id/title"
        android:layout_alignStart="@+android:id/title"
        android:layout_marginTop="20dp"
        android:ellipsize="end" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seek_bar_preference"
        android:layout_below="@+id/max_value_seek_bar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/max_value_seek_bar"
        android:layout_alignBaseline="@+id/min_value_seek_bar"
        android:layout_alignBottom="@+id/min_value_seek_bar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:ellipsize="end" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/min_value_seek_bar"
        android:layout_centerHorizontal="true"
        android:id="@+id/current_value_seek_bar"
        android:ellipsize="end" />
</RelativeLayout>